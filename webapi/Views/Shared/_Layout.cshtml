<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - webapi</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.iconify.design/3/3.1.1/iconify.min.js"></script>
</head>

<body class="bg-gray-100">
    <div id="wrapper" class="flex min-h-screen sidebar-open">
        <aside
            class="bg-white w-64 min-h-screen border-r border-gray-200 transition-all duration-300 ease-in-out overflow-hidden fixed z-20 [.sidebar-closed_&]:w-16">
            <div class="p-4">
                <div class="flex items-center justify-between">
                    <h1 id="sidebar-title" class="text-xl font-semibold [.sidebar-closed_&]:hidden">Dashboard</h1>
                    <button id="toggle-sidebar" class="p-2 rounded-lg hover:bg-gray-100">
                        <span class="iconify" data-icon="mdi:menu" data-width="24"></span>
                    </button>
                </div>

                <nav class="mt-6">
                    <ul>
                        <li class="mb-2">
                            <a href="#" class="flex items-center p-2 text-gray-700 hover:bg-gray-100 rounded-lg">
                                <span class="iconify" data-icon="mdi:home" data-width="20"></span>
                                <span class="ml-2 [.sidebar-closed_&]:hidden">Home</span>
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="flex items-center p-2 text-gray-700 hover:bg-gray-100 rounded-lg">
                                <span class="iconify" data-icon="mdi:chart-line" data-width="20"></span>
                                <span class="ml-2 [.sidebar-closed_&]:hidden">Analytics</span>
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="flex items-center p-2 text-gray-700 hover:bg-gray-100 rounded-lg">
                                <span class="iconify" data-icon="mdi:cog" data-width="20"></span>
                                <span class="ml-2 [.sidebar-closed_&]:hidden">Settings</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="flex-1 transition-all duration-300 ease-in-out [.sidebar-open_&]:ml-64 ml-16">
            <header
                class="bg-white h-[70px] border-b border-gray-200 p-4 fixed z-10 transition-all duration-300 ease-in-out [.sidebar-open_&]:w-[calc(100%-16rem)] w-[calc(100%-4rem)]">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="text-lg font-semibold">@ViewData["Title"]</h2>
                    </div>
                    <div class="flex items-center space-x-4">
                        <button class="p-2 rounded-lg hover:bg-gray-100">
                            <span class="iconify" data-icon="mdi:bell" data-width="20"></span>
                        </button>
                        <div class="relative">
                            <button id="user-menu" class="p-2 rounded-lg hover:bg-gray-100">
                                <span class="iconify" data-icon="mdi:account-circle" data-width="20"></span>
                            </button>

                            <div id="dropdown-menu"
                                class="hidden absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded-lg shadow-lg">
                                <ul>
                                    <li>
                                        <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Profile</a>
                                    </li>
                                    <li>
                                        <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Settings</a>
                                    </li>
                                    <li>
                                        <a asp-controller="WebAuthentication" asp-action="Logout"
                                            class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Logout</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <main class="pt-[70px] min-h-[calc(100vh-4rem)]">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>